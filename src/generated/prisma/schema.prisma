generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

// Prisma 6 format - url in datasource is correct for Prisma 6.x
// This warning is a false positive from Prisma 7-aware language server
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DatabaseConnection {
  id                 String           @id
  name               String
  provider           String
  connectionString   String
  selectedTables     String[]
  createdAt          DateTime         @default(now())
  updatedAt          DateTime
  startupName        String
  slug               String?          @unique
  paidUsers          Int?
  totalUsers         Int?
  category           String?
  description        String?
  founderAvatar      String?
  founderHandle      String?
  founderName        String?
  logo               String?
  tagline            String?
  website            String?
  readOnlyConnString String?
  readOnlyRoleName   String?
  MetricSnapshot     MetricSnapshot[]
}

model MetricSnapshot {
  id                 String             @id
  connectionId       String
  date               DateTime           @db.Date
  totalUsers         Int                @default(0)
  paidUsers          Int                @default(0)
  activeUsers        Int                @default(0)
  newSignups         Int                @default(0)
  churnedUsers       Int                @default(0)
  createdAt          DateTime           @default(now())
  DatabaseConnection DatabaseConnection @relation(fields: [connectionId], references: [id], onDelete: Cascade)

  @@unique([connectionId, date])
  @@index([connectionId, date])
}

model Spotlight {
  id                    String    @id @default(cuid())
  name                  String
  tagline               String
  url                   String
  logo                  String?
  position              Int?
  isActive              Boolean   @default(true)
  expiresAt             DateTime?
  stripePaymentIntentId String?
  stripeSessionId       String?
  paymentAmount         Int? // Amount in cents
  paidAt                DateTime?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([position])
  @@index([isActive, expiresAt])
}

model DbCredential {
  id        String    @id
  host      String
  port      Int
  database  String
  username  String
  password  String
  ssl       Boolean   @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime
  Startup   Startup[]

  @@map("DbCredential")
}

model Startup {
  id            String       @id
  name          String
  slug          String       @unique
  description   String?
  logoUrl       String?
  provider      String
  credentialsId String
  createdAt     DateTime     @default(now())
  updatedAt     DateTime
  DbCredential  DbCredential @relation(fields: [credentialsId], references: [id], onDelete: Cascade)

  @@index([slug])
  @@index([credentialsId])
  @@map("Startup")
}

enum MessageType {
  RESULT
  ERROR
}
